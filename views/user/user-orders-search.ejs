<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Order Search Results</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    table { border-collapse: collapse; width: 100%; }
    th, td { padding: 8px 12px; border: 1px solid #ccc; text-align: left; }
    th { background-color: #eee; }
  </style>
</head>
<body>
  <h1>Search Results for "<%= query %>"</h1>

  <% if (orders.length === 0) { %>
    <p>No orders found.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Created On</th>
          <th>Total Price</th>
          <th>Status</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order.orderId %></td>
            <td><%= new Date(order.createdOn).toLocaleString() %></td>
            <td>Â£<%= order.totalPrice.toFixed(2) %></td>
            <td><%= order.status %></td>
            <td><a href="/orders/<%= order._id %>">View</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <p><a href="/orders">Back to all orders</a></p>
</body>
</html>

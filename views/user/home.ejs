<%- include("../../views/partials/user/header") %>

<style>
  /* Buttons */
  .btn-primary {
    background-color: #3bcf0d; /* success green */
    color: #fff;
    padding: 12px 24px;
    font-weight: 600;
    border: none;
    border-radius: 6px;
    transition: background-color 0.3s ease;
  }
  .btn-primary:hover {
    background-color:#3bcf0d;/* darker success green */
    color: #fff;
  }

  /* Hero Section */
  .hero {
    background: url('/img/hero/hero-farm.jpg') center center/cover no-repeat;
    height: 80vh;
    display: flex;
    align-items: center;
    color: #fff;
    position: relative;
    padding-top: 150px; /* space for fixed header */
  }
  .hero-text {
    margin-left: 5%;
    max-width: 500px;
  }
  .hero-text h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
  }
.hero-text p {
  font-size: 1.2rem;
  margin-bottom: 1.5rem;
  color: #a5b8a6;
  font-weight: 700; /* You can also try 700 for full bold */
}


  /* Banner Section */
  .banner {
    display: flex;
    gap: 20px;
    margin: 3rem auto;
    max-width: 1200px;
    flex-wrap: wrap;
  }
  .banner-item {
    flex: 1 1 30%;
    position: relative;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 4px 12px #3bcf0d; /* success green shadow */
    cursor: pointer;
    transition: transform 0.3s ease;
  }
  .banner-item img {
    width: 100%;
    height: auto;
    display: block;
  }
  .banner-item:hover {
    transform: scale(1.03);
  }
  .banner-text {
    position: absolute;
    bottom: 15px;
    left: 15px;
    color: #fff;
    background-color:  #3bcf0d; /* success green bg */
    padding: 10px 15px;
    border-radius: 8px;
    font-weight: 700;
    font-size: 1.25rem;
  }

  /* Products Section */
  .products {
    max-width: 1200px;
    margin: 2rem auto 5rem;
  }
  .products-header {
    font-size: 2rem;
    font-weight: 700;
    color: #3bcf0d;/* success green */
    margin-bottom: 1rem;
    text-align: center;
  }
  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 2rem;
  }
  .product-card {
    border: 1px solid #ddd;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    transition: box-shadow 0.3s ease;
    background: #fff;
  }
  .product-card:hover {
    box-shadow: 0 8px 20px #3bcf0d; /* success green shadow */
  }
  .product-img {
    width: 100%;
    height: 180px;
    object-fit: cover;
  }
  .product-info {
    padding: 1rem;
  }
  .product-info h5 {
    margin: 0 0 0.5rem;
    color:#3bcf0d; /* success green */
    font-weight: 700;
    font-size: 1.2rem;
  }
  .product-info p {
    color: #555;
    font-size: 0.95rem;
    margin-bottom: 1rem;
  }
  .product-info .price {
    color: #3bcf0d; /* success green */
    font-weight: 700;
    font-size: 1.1rem;
    margin-bottom: 1rem;
  }
  .product-info .btn-add {
    display: inline-block;
    width: 100%;
    text-align: center;
    background-color:#3bcf0d; /* success green */
    color: white;
    padding: 10px 0;
    border-radius: 8px;
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 1px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  .product-info .btn-add:hover {
    background-color:#3bcf0d; /* darker success green */
  }
</style>

<section class="hero">
  <div class="hero-text">
    <h1>Fresh Vegetables, Delivered to Your Doorstep</h1>
    <p>Discover organic, farm-fresh produce grown with care and delivered with love.</p>
    <a href="/shop" class="btn-primary">Shop Now</a>
  </div>
</section>

<section class="banner">
  <div class="banner-item">
    <img src="/img/banner/organic-vegetables.png" alt="Organic Vegetables">
    <div class="banner-text">Organic Vegetables</div>
  </div>
  <div class="banner-item">
    <img src="/img/banner/fresh-fruits.png" alt="Fresh Fruits">
    <div class="banner-text">Fresh Fruits</div>
  </div>
  <div class="banner-item">
    <img src="/img/banner/herbs-spices.jpg" alt="Herbs & Spices">
    <div class="banner-text">Herbs & Spices</div>
  </div>
</section>

<section class="products">
  <h2 class="products-header">Fresh from the Farm</h2>
  <div class="product-grid">
    <% products.forEach(product => { 
         // Clean filename to remove any folder paths or backslashes
         const cleanFileName = product.productImage[0].split('\\').pop().split('/').pop(); 
    %>
      <div class="product-card">
        <!-- <span class="wishlist-btn">❤️</span> -->
        <a href="/product-details?id=<%= product._id %>">
        <img src="/uploads/products/<%= cleanFileName %>" alt="<%= product.productName %>" class="product-img" />
        <div class="product-info">
          <h5><%= product.productName %></h5>
          <p><%= product.description.substring(0, 60) %>...</p>
          <div class="price">£<%= product.price %></div>
          </a>
          <a href="/product/<%= product._id %>" class="btn-add view-details">View Details</a>
        </div>
      </div>
    <% }) %>
  </div>
</section>



<%- include("../../views/partials/user/footer") %>

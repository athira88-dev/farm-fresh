<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../../views/partials/admin/header") %>
  <meta charset="UTF-8">
  <title>Category Management</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Category Management</h1>




    <!-- Search Form -->
    <form class="row mb-3" method="GET" action="/admin/category">
      <div class="col-md-4">
        <input type="text" name="search" class="form-control" placeholder="Search categories..." value="<%= search %>">
      </div>
      <div class="col-md-auto">
        <button type="submit" class="btn btn-primary">Search</button>
        <a href="/admin/category" class="btn btn-secondary">Clear</a>
      </div>
      <div class="col text-end">
        <a href="/admin/addCategory" class="btn btn-success">Add New Category</a>
      </div>
    </form>

    <!-- Categories Table -->
    <table class="table table-bordered">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Offer (%)</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (categories.length === 0) { %>
          <tr>
            <td colspan="5" class="text-center">No categories found.</td>
          </tr>
        <% } else { %>
          <% categories.forEach(category => { %>
            <tr class="<%= category.isBlocked ? 'table-danger' : (!category.isListed ? 'table-warning' : '') %>">
              <td><%= category.name %></td>
              <td><%= category.description %></td>
              <td>
  <% if (category.categoryOffer && category.categoryOffer.isActive && typeof category.categoryOffer.discountPercentage === 'number') { %>
    <%= category.categoryOffer.discountPercentage %>% 
   <%
  const endDate = new Date(category.categoryOffer.endDate);
  const now = new Date();
  const isExpired = endDate < now;
%>
<span class="badge <%= isExpired ? 'bg-secondary' : 'bg-success' %>">
  <%= isExpired ? 'Expired' : 'Active' %>
</span>
    <% if (category.categoryOffer.startDate && category.categoryOffer.endDate) { %>
      <br />
      <small>
        Valid: 
        <%= new Date(category.categoryOffer.startDate).toLocaleDateString() %> - 
        <%= new Date(category.categoryOffer.endDate).toLocaleDateString() %>
      </small>
    <% } %>
    <br />
    <button class="btn btn-sm btn-info edit-offer-btn"
      data-id="<%= category._id %>"
      data-discount="<%= category.categoryOffer.discountPercentage %>"
      data-start="<%= category.categoryOffer.startDate ? new Date(category.categoryOffer.startDate).toISOString().split('T')[0] : '' %>"
      data-end="<%= category.categoryOffer.endDate ? new Date(category.categoryOffer.endDate).toISOString().split('T')[0] : '' %>"
      data-active="<%= category.categoryOffer.isActive %>"
    >
      Edit
    </button>
    <button class="btn btn-sm btn-danger" onclick="deleteCategoryOffer('<%= category._id %>')">Delete</button>
  <% } else { %>
    <span class="text-muted">No Offer</span>
    <button class="btn btn-sm btn-primary" onclick="openAddCategoryOffer('<%= category._id %>')">Add</button>
  <% } %>
</td>





              <td><%= new Date(category.createdAt).toLocaleString() %></td>
              <td>
                <a href="/admin/editCategory/<%= category._id %>" class="btn btn-sm btn-warning">Edit</a>

                <!-- Soft Delete -->
                <form action="/admin/category/delete/<%= category._id %>" method="POST" class="d-inline">
                  <button type="button" class="btn btn-sm btn-danger delete-btn">Delete</button>
                </form>

                <!-- Block / Unblock -->
                <% if (!category.isBlocked) { %>
                  <form action="/admin/category/block/<%= category._id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-dark">Block</button>
                  </form>
                <% } else { %>
                  <form action="/admin/category/unblock/<%= category._id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-success">Unblock</button>
                  </form>
                <% } %>

                <!-- List / Unlist -->
                <% if (category.isListed) { %>
                  <form action="/admin/category/unlist/<%= category._id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-secondary">Unlist</button>
                  </form>
                <% } else { %>
                  <form action="/admin/category/list/<%= category._id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-primary">List</button>
                  </form>
                <% } %>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>

    <!-- Pagination -->
    <nav>
      <ul class="pagination justify-content-center">
        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= search %>">Previous</a>
          </li>
        <% } else { %>
          <li class="page-item disabled"><span class="page-link">Previous</span></li>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
          </li>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= search %>">Next</a>
          </li>
        <% } else { %>
          <li class="page-item disabled"><span class="page-link">Next</span></li>
        <% } %>
      </ul>
    </nav>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="confirmDeleteModal" class="modal" tabindex="-1" style="display:none;">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content p-4">
        <h5 class="modal-title">Confirm Deletion</h5>
        <p>Are you sure you want to delete this category?</p>
        <div class="text-end">
          <button id="modalCancelBtn" class="btn btn-secondary me-2">Cancel</button>
          <button id="modalConfirmBtn" class="btn btn-danger">Delete</button>
        </div>
      </div>
    </div>
  </div>
  <!-- Add Category Offer Modal -->
<!-- Add Category Offer Modal -->
<div class="modal fade" id="addOfferModal" tabindex="-1" aria-labelledby="addOfferModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form id="addOfferForm" method="POST" action="/admin/category/offer/add">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addOfferModalLabel">Add Category Offer</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" name="categoryId" id="addOfferCategoryId" />
          <div class="mb-3">
            <label for="offerValue" class="form-label">Offer Percentage</label>
            <input type="number" name="categoryOffer" id="offerValue" class="form-control" min="1" max="100" required />
          </div>
          <div class="mb-3">
            <label for="startDate" class="form-label">Start Date</label>
            <input type="date" name="startDate" class="form-control" required />
          </div>
          <div class="mb-3">
            <label for="endDate" class="form-label">End Date</label>
            <input type="date" name="endDate" class="form-control" required />
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Add Offer</button>
        </div>
      </div>
    </form>
  </div>
</div>



<!-- Edit Category Offer Modal -->
<div class="modal fade" id="editCategoryOfferModal" tabindex="-1" aria-labelledby="editOfferModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form id="editCategoryOfferForm" method="POST" action="/admin/category/offer/edit">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editOfferModalLabel">Edit Category Offer</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" name="categoryId" id="editCategoryId" />

          <div class="mb-3">
            <label for="editDiscountPercentage" class="form-label">Discount Percentage (%)</label>
            <input type="number" class="form-control" name="discountPercentage" id="editDiscountPercentage" min="0" max="100" required />
          </div>

          <div class="mb-3">
            <label for="editStartDate" class="form-label">Start Date</label>
            <input type="date" class="form-control" name="startDate" id="editStartDate" />
          </div>

          <div class="mb-3">
            <label for="editEndDate" class="form-label">End Date</label>
            <input type="date" class="form-control" name="endDate" id="editEndDate" />
          </div>

          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" name="isActive" id="editIsActive" />
            <label class="form-check-label" for="editIsActive">Active</label>
          </div>
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save Changes</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
      </div>
    </form>
  </div>
</div>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>

  document.addEventListener('DOMContentLoaded', () => {
    // Show Add Offer Modal
    window.openAddCategoryOffer = function (categoryId) {
      document.getElementById('addOfferCategoryId').value = categoryId;
      const addModal = new bootstrap.Modal(document.getElementById('addOfferModal'));
      addModal.show();
    };

    // Edit Offer Modal Setup using buttons with class 'edit-offer-btn'
    document.querySelectorAll('.edit-offer-btn').forEach(button => {
      button.addEventListener('click', function () {
        const categoryId = this.getAttribute('data-id');
        const discount = this.getAttribute('data-discount');
        const startDate = this.getAttribute('data-start');
        const endDate = this.getAttribute('data-end');
        const isActive = this.getAttribute('data-active') === 'true';

        document.getElementById('editCategoryId').value = categoryId;
        document.getElementById('editDiscountPercentage').value = discount;
        document.getElementById('editStartDate').value = startDate;
        document.getElementById('editEndDate').value = endDate;
        document.getElementById('editIsActive').checked = isActive;

        const editModal = new bootstrap.Modal(document.getElementById('editCategoryOfferModal'));
        editModal.show();
      });
    });

    // Delete Confirmation Modal (soft delete)
    document.querySelectorAll('.delete-btn').forEach(btn => {
      btn.addEventListener('click', function () {
        const form = this.closest('form');
        const confirmModalElement = document.getElementById('confirmDeleteModal');
        const bsModal = new bootstrap.Modal(confirmModalElement);

        document.getElementById('modalConfirmBtn').onclick = function () {
          form.submit();
        };

        document.getElementById('modalCancelBtn').onclick = function () {
          bsModal.hide();
        };

        bsModal.show();
      });
    });

    // Optional: Also expose this function globally if you use it in inline onclicks
    window.openEditCategoryOffer = function (categoryId, discountPercentage, startDate, endDate, isActive) {
      document.getElementById('editCategoryId').value = categoryId;
      document.getElementById('editDiscountPercentage').value = discountPercentage;
      document.getElementById('editStartDate').value = startDate || '';
      document.getElementById('editEndDate').value = endDate || '';
      document.getElementById('editIsActive').checked = Boolean(isActive);

      const editModal = new bootstrap.Modal(document.getElementById('editCategoryOfferModal'));
      editModal.show();
    };

    // DELETE via Fetch (hard delete route)
window.deleteCategoryOffer = function (categoryId) {
  Swal.fire({
    title: 'Are you sure?',
    text: "This will delete the category offer.",
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#d33',
    cancelButtonColor: '#3085d6',
    confirmButtonText: 'Yes, delete it!'
  }).then((result) => {
    if (result.isConfirmed) {
      fetch(`/admin/category/offer/delete/${categoryId}`, {
        method: 'DELETE',
      }).then(res => {
        if (res.ok) {
          Swal.fire({
            icon: 'success',
            title: 'Deleted!',
            text: 'The offer has been deleted.',
            timer: 1500,
            showConfirmButton: false
          }).then(() => {
            location.reload();
          });
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Failed',
            text: 'Failed to delete offer.'
          });
        }
      });
    }
  });
};

  });
</script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const editButtons = document.querySelectorAll('.edit-offer-btn');

    editButtons.forEach(button => {
      button.addEventListener('click', () => {
        const id = button.dataset.id;
        const discount = button.dataset.discount;
        const start = button.dataset.start;
        const end = button.dataset.end;

        document.getElementById('editCategoryId').value = id;
        document.getElementById('editDiscountPercentage').value = discount || '';
        document.getElementById('editStartDate').value = start || '';
        document.getElementById('editEndDate').value = end || '';

        const modal = new bootstrap.Modal(document.getElementById('editCategoryOfferModal'));
        modal.show();
      });
    });
  });
</script>




</body>
<%- include("../../views/partials/admin/footer") %>
</html>
